#--------------------------------------------
# OTHER SETTINGS
#--------------------------------------------
ulimit -S -c 0        # Don't want coredumps.
set -o notify
set -o noclobber
set -o ignoreeof
#set -o vi
unset MAILCHECK

#--------------------------------------------
# SHOPT BUILTIN
#--------------------------------------------
# Values of variables controlling optional shell behavior
# Enabled options:
shopt -s checkwinsize
#shopt -s cdspell
shopt -s checkjobs
shopt -s checkhash 
shopt -s cmdhist
shopt -s dotglob
#shopt -s dirspell
shopt -s extglob      # Necessary for programmable completion.
shopt -s globstar
shopt -s histappend 
shopt -s histreedit
shopt -s histverify
#shopt -s lithist
#shopt -s no_empty_cmd_completion
shopt -s nullglob

# Disabled options:
shopt -u mailwarn     # Don't want shell to warn me of incoming mail.

#--------------------------------------------
# HISTORY SETTINGS
#--------------------------------------------
# history length see HISTSIZE and HISTFILESIZE in bash(1)
# Add time and date to your bash history
# leave some commands out of history log
HISTFILESIZE=20000
HISTSIZE=10000
export HISTTIMEFORMAT="[%h %d %H:%M:%S] :"
export HISTCONTROL=ignoreboth
export HISTIGNORE="&:??:[ ]*:clear:exit:logout:history"
